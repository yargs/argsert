{
  "name": "argsert",
  "version": "1.0.0",
  "main": "lib/index.js",
  "repository": "yargs/argsert",
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">= 6"
  },
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "coveralls": "^3.0.1",
    "cross-env": "^5.2.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^0.14.3",
    "nyc": "^12.0.2",
    "prettier": "1.19.1",
    "pretty-quick": "^1.6.0"
  },
  "scripts": {
    "build": "babel src --out-dir lib",
    "precommit": "pretty-quick --staged",
    "test": "cross-env NODE_ENV=test nyc ava",
    "posttest": "eslint . && yarn build",
    "prepublishOnly": "yarn test"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 6
          }
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "text",
      "lcov"
    ],
    "check-coverage": true,
    "sourceMap": false,
    "instrument": false
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ]
  },
  "eslintIgnore": [
    "lib",
    "coverage"
  ],
  "prettier": {
    "singleQuote": true
  }
}
